{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./lib",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["storybook", "node_modules", "**/*.test.tsx", "**/*.test.ts"]
}
